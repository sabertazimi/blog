{
  "name": "@sabertazimi/blog",
  "version": "2.14.0",
  "description": "A blog system based on React and Next",
  "author": "sabertazimi",
  "license": "MIT",
  "keywords": [
    "blog",
    "next",
    "react",
    "starter",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sabertazimi/blog"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/blog/issues"
  },
  "browserslist": "last 2 versions",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "build": "next build && next-sitemap --config sitemap.config.js",
    "dev": "next",
    "format": "prettier --write {__mocks__,components,config,contents,hooks,layouts,lib,pages,styles,types}/**/*.{ts,tsx,css}",
    "lint": "next lint && yarn lint:md && yarn lint:style && yarn lint:type-check",
    "lint:md": "markdownlint ./contents",
    "lint:style": "stylelint ./styles/**/*.css",
    "lint:type-check": "tsc --noEmit",
    "lint:fix": "yarn lint:md:fix && yarn lint:style:fix",
    "lint:md:fix": "markdownlint ./contents --fix",
    "lint:style:fix": "stylelint ./styles/**/*.css --fix",
    "changeset": "standard-version --dry-run -s",
    "release": "standard-version -s",
    "serve": "next start",
    "start": "yarn dev",
    "test": "jest -o",
    "test:all": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@octokit/rest": "^18.12.0",
    "antd": "^4.20.0",
    "classnames": "^2.3.1",
    "framer-motion": "^6.3.1",
    "gray-matter": "^4.0.3",
    "katex": "^0.15.3",
    "next": "12.1.5",
    "next-mdx-remote": "4.0.1",
    "next-progress": "^2.2.0",
    "next-pwa": "^5.5.2",
    "next-seo": "^5.4.0",
    "next-sitemap": "^2.5.20",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^1.0.1",
    "rehype-katex": "^6.0.2",
    "rehype-slug": "^5.0.1",
    "remark-gemoji": "^7.0.1",
    "remark-gfm": "^3.0.1",
    "remark-github": "^11.2.2",
    "remark-math": "^5.1.1",
    "typed.js": "^2.0.12"
  },
  "devDependencies": {
    "@dg-scripts/stylelint-config": "^5.9.0",
    "@octokit/types": "^6.34.0",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^27.4.1",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^16.11.27",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "eslint": "^8.14.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "jest-axe": "^6.0.0",
    "markdownlint-cli": "^0.31.1",
    "postcss": "^8.4.12",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "stylelint": "^14.7.1",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3"
  }
}

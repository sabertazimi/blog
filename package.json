{
  "name": "@sabertazimi/blog",
  "version": "3.4.0",
  "description": "A blog system based on React and Next",
  "author": "sabertazimi",
  "license": "MIT",
  "keywords": [
    "blog",
    "next",
    "react",
    "starter",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sabertazimi/blog"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/blog/issues"
  },
  "browserslist": "last 2 versions",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "build": "next build && next-sitemap --config sitemap.config.js",
    "dev": "next",
    "e2e:chrome": "start-server-and-test e2e:prepare http://localhost:3000 cypress:chrome",
    "e2e:firefox": "start-server-and-test e2e:prepare http://localhost:3000 cypress:firefox",
    "e2e:ui": "start-server-and-test e2e:prepare http://localhost:3000 cypress:open",
    "e2e:prepare": "yarn build && yarn serve",
    "cypress:chrome": "cypress run --browser chrome",
    "cypress:chromium": "cypress run --browser chromium",
    "cypress:edge": "cypress run --browser edge",
    "cypress:electron": "cypress run",
    "cypress:firefox": "cypress run --browser firefox",
    "cypress:open": "cypress open",
    "format": "prettier --write {__mocks__,components,config,contents,cypress,hooks,layouts,lib,pages,styles,types}/**/*.{ts,tsx,css}",
    "format:check": "prettier --check {__mocks__,components,config,contents,cypress,hooks,layouts,lib,pages,styles,types}/**/*.{ts,tsx,css}",
    "lint": "next lint && yarn lint:style && yarn lint:type-check && yarn format:check",
    "lint:style": "stylelint ./styles/**/*.css",
    "lint:type-check": "tsc --noEmit",
    "lint:fix": "next lint --fix && yarn lint:style:fix && yarn format",
    "lint:style:fix": "stylelint ./styles/**/*.css --fix",
    "changeset": "standard-version --dry-run -s",
    "release": "standard-version -s",
    "serve": "next start",
    "start": "start-server-and-test dev http://localhost:3000 cypress:open",
    "test": "jest -o",
    "test:all": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@codesandbox/sandpack-react": "^0.19.6",
    "@octokit/rest": "^18.12.0",
    "antd": "^4.20.2",
    "classnames": "^2.3.1",
    "framer-motion": "^6.3.3",
    "gray-matter": "^4.0.3",
    "katex": "^0.15.3",
    "next": "^12.1.6",
    "next-mdx-remote": "^4.0.3",
    "next-progress": "^2.2.0",
    "next-pwa": "^5.5.2",
    "next-seo": "^5.4.0",
    "next-sitemap": "^2.5.20",
    "parse-numeric-range": "^1.3.0",
    "prism-react-renderer": "^1.3.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-live-runner": "^1.0.4",
    "react-use": "^17.3.2",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^1.0.1",
    "rehype-katex": "^6.0.2",
    "rehype-slug": "^5.0.1",
    "remark-directive": "^2.0.1",
    "remark-gemoji": "^7.0.1",
    "remark-gfm": "^3.0.1",
    "remark-github": "^11.2.2",
    "remark-math": "^5.1.1",
    "remark-mdx-code-meta": "^1.0.0",
    "typed.js": "^2.0.12",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@dg-scripts/stylelint-config": "^5.10.0",
    "@octokit/types": "^6.34.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.0",
    "@types/jest-axe": "^3.5.3",
    "@types/mdast": "^3.0.10",
    "@types/node": "^16.11.33",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/unist": "^2.0.6",
    "cypress": "^9.6.1",
    "eslint": "^8.15.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.0",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^28.1.0",
    "postcss": "^8.4.13",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.5.0",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.8.2",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^28.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  }
}

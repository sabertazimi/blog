{
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build", "dist", "public", "coverage", "cypress"],
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ES2021", "ESNext"],
    "jsx": "preserve",
    "outDir": "./build",
    "removeComments": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@config": ["config"],
      "@hooks": ["hooks"],
      "@images/*": ["public/images/*"],
      "@layouts": ["layouts"],
      "@lib": ["lib"],
      "@styles": ["styles"],
      "@types": ["types"],
      "@mocks/*": ["__mocks__/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "allowJs": true
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs"
    }
  }
}

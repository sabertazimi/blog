{
  "name": "@sabertazimi/blog",
  "version": "2.14.0",
  "description": "A blog system based on React and Next",
  "author": "sabertazimi",
  "license": "MIT",
  "keywords": [
    "gatsby",
    "next",
    "react"
  ],
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "lint": "next lint && yarn lint:md && yarn lint:style && yarn lint:type-check",
    "lint:md": "markdownlint ./contents",
    "lint:style": "stylelint ./styles/**/*.css",
    "lint:type-check": "tsc --noEmit",
    "lint:fix": "yarn lint:md:fix && yarn lint:style:fix",
    "lint:md:fix": "markdownlint ./contents --fix",
    "lint:style:fix": "stylelint ./styles/**/*.css --fix",
    "changesets": "standard-version --dry-run -s",
    "release": "standard-version -s",
    "serve": "next start",
    "start": "yarn dev",
    "start:watch": "concurrently \"yarn:dev\" \"yarn:test:watch\"",
    "test": "jest -o",
    "test:all": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.19.5",
    "classnames": "^2.3.1",
    "next": "12.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-helmet": "^6.1.0",
    "react-spring": "^9.4.4",
    "typed.js": "^2.0.12"
  },
  "devDependencies": {
    "@dg-scripts/stylelint-config": "^5.9.0",
    "@octokit/rest": "^18.12.0",
    "@octokit/types": "^6.34.0",
    "@react-spring/types": "^9.4.4",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^27.4.1",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^16.11.27",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "@types/react-helmet": "^6.1.5",
    "@types/react-test-renderer": "^18.0.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "gray-matter": "^4.0.3",
    "jest": "^27.5.1",
    "jest-axe": "^6.0.0",
    "markdownlint-cli": "^0.31.1",
    "postcss": "^8.4.12",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "react-test-renderer": "^18.0.0",
    "standard-version": "^9.3.2",
    "stylelint": "^14.7.1",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3"
  },
  "browserslist": "last 2 versions",
  "dependenciesMeta": {
    "@react-spring/core": {
      "built": false
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sabertazimi/blog"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/blog/issues"
  }
}

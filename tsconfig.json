{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/images/*": [
        "public/images/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "@testing-library/jest-dom"
    ],
    "allowJs": true,
    "strict": true,
    "importHelpers": true,
    "noEmit": true,
    "outDir": "./build",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "public",
    "coverage",
    "cypress",
    "cypress.config.ts"
  ],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs"
    }
  }
}
